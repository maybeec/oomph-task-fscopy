<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.github.maybeec.oomph</groupId>
  <artifactId>task-fscopy-parent</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <name>Oomph Task - File System Copy - Parent</name>
  <packaging>pom</packaging>

  <developers>
    <developer>
      <name>Malte Brunnlieb</name>
      <organization>GitHub</organization>
      <organizationUrl>https://github.com/maybeec</organizationUrl>
    </developer>
    <developer>
      <name>Steffen B. Holzer</name>
      <organization>GitHub</organization>
      <organizationUrl>https://github.com/themetalone</organizationUrl>
    </developer>
  </developers>

  <url>https://github.com/maybeec/oomph-task-fscopy</url>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/maybeec/oomph-task-fscopy/issues</url>
  </issueManagement>

  <scm>
    <connection>scm:git:git@github.com:maybeec/oomph-task-fscopy.git</connection>
    <developerConnection>scm:git:git@github.com:maybeec/oomph-task-fscopy.git</developerConnection>
    <url>git@github.com:maybeec/oomph-task-fscopy.git</url>
  </scm>

  <licenses>
    <license>
      <name>Eclipse Public Licence - v 1.0</name>
      <url>https://www.eclipse.org/legal/epl-v10.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <!-- Eclipse version to build against -->
    <eclipse-repo.url>http://download.eclipse.org/releases/mars</eclipse-repo.url>

    <!-- Tycho Build parameters -->
    <tycho.version>0.22.0</tycho.version>
    <tycho-extras.version>0.22.0</tycho-extras.version>
    <tycho-repo.url>https://oss.sonatype.org/content/groups/public/</tycho-repo.url>
  </properties>

  <modules>
    <module>task-fscopy</module>
    <module>task-fscopy.edit</module>
    <module>task-fscopy-feature</module>
    <module>task-fscopy-updatesite</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <encoding>${project.build.sourceEncoding}</encoding>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-maven-plugin</artifactId>
        <version>${tycho.version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.eclipse.tycho</groupId>
          <artifactId>target-platform-configuration</artifactId>
          <version>${tycho.version}</version>
        </plugin>
        <plugin>
          <groupId>org.eclipse.tycho</groupId>
          <artifactId>tycho-compiler-plugin</artifactId>
          <version>${tycho.version}</version>
          <configuration>
            <compilerArguments>
              <inlineJSR/>
              <enableJavadoc/>
              <encoding>${project.build.sourceEncoding}</encoding>
            </compilerArguments>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.eclipse.tycho</groupId>
          <artifactId>tycho-source-plugin</artifactId>
          <version>${tycho.version}</version>
          <configuration>
            <strictSrcIncludes>false</strictSrcIncludes>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.eclipse.tycho.extras</groupId>
          <artifactId>tycho-source-feature-plugin</artifactId>
          <version>${tycho-extras.version}</version>
        </plugin>
        <plugin>
          <groupId>org.eclipse.tycho</groupId>
          <artifactId>tycho-p2-plugin</artifactId>
          <version>${tycho.version}</version>
          <configuration>
            <baselineMode>warn</baselineMode>
            <baselineReplace>none</baselineReplace>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <repositories>
    <repository>
      <id>eclipse platform</id>
      <layout>p2</layout>
      <url>${eclipse-repo.url}</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>tycho</id>
      <url>${tycho-repo.url}</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </pluginRepository>
  </pluginRepositories>

</project>
